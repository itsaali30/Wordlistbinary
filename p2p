<body>
    <div id="app">
        <!-- Header -->
        <div class="header">
            <!-- Profile Slide Menu Toggle -->
            <i class="fas fa-user-circle menu-btn" @click="toggleProfileSlideMenu"></i>

            <!-- Balance & Star Info -->
            <div>
                <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Profile">
                <strong>John Doe</strong> | Balance: â‚¹500 | <i class="fas fa-star text-warning"></i> 55
            </div>

            <!-- Slide Menu Toggle Button -->
            <i class="fas fa-bars menu-btn" @click="toggleSlideMenu"></i>
        </div>

        <!-- Profile Slide Menu -->
        <div :class="['profile-slide-menu', { active: showProfileSlideMenu }]">
            <h5>Profile Menu</h5>
            <ul class="list-unstyled">
                <li><a href="#"><i class="fas fa-user-edit"></i> Edit Profile</a></li>
