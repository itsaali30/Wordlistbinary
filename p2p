                <li><a href="#"><i class="fas fa-wallet"></i> Star Wallet</a></li>
            </ul>
        </div>

        <!-- Slide Menu -->
        <div :class="['slide-menu', { active: showSlideMenu }]">
            <h5>Side Menu</h5>
            <ul class="list-unstyled">
                <li><a href="#"><i class="fas fa-sign-in-alt"></i> Login</a></li>
