            </ul>
        </div>

        <!-- Main Content -->
        <div class="container mt-5 text-center">
            <h2>{{ pageTitle }}</h2>
            <p>Welcome to the Vue.js SPA with a slide profile menu!</p>
        </div>

        <!-- Bottom Navigation Bar -->
        <div class="bottom-nav">
            <a href="#" @click="setPage('Home')"><i class="fas fa-home"></i> Home</a>
            <a href="#" @click="setPage('My Account')"><i class="fas fa-user"></i> My Account</a>
            <a href="#" @click="setPage('Buy')"><i class="fas fa-shopping-cart"></i> Buy</a>
            <a href="#" @click="setPage('Sale')"><i class="fas fa-dollar-sign"></i> Sale</a>
            <a href="#" @click="setPage('Transaction')"><i class="fas fa-exchange-alt"></i> Transaction</a>
        </div>
    </div>

    <script>
        const app = Vue.createApp({
            data() {
                return {
                    showProfileSlideMenu: false,
                    showSlideMenu: false,
                    pageTitle: 'Home'
                };
            },
            methods: {
                toggleProfileSlideMenu() {
                    this.showProfileSlideMenu = !this.showProfileSlideMenu;
                },
                toggleSlideMenu() {
                    this.showSlideMenu = !this.showSlideMenu;
                },
                setPage(page) {
                    this.pageTitle = page;
                    this.showProfileSlideMenu = false;
                    this.showSlideMenu = false;
                }
            }
        });
        app.mount('#app');
    </script>
